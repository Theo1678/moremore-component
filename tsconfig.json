{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "moduleResolution": "node",
    "jsx": "preserve"
  },
  "include": ["src/index.ts", "src/components/**/*.vue", "src/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "src/main.ts",
    "src/router/**/*",
    "src/views/**/*"
  ]
}
